{
  "name": "melo",
  "version": "1.0.0",
  "description": "Melo - An advanced music creation and recording application",
  "author": "Matteo <matteo@example.com>",
  "homepage": "https://example.com/melo",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc src/main.ts --outDir dist && webpack --config webpack.config.js",
    "dev": "npm run build && electron .",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.melo.app",
    "productName": "Melo",
    "icon": "icon.png",
    "electronVersion": "38.0.0",
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "deb"
    },
    "files": [
      "dist/**/*",
      "icon.png"
    ]
  },
  "devDependencies": {
    "electron": "^38.0.0",
    "typescript": "^5.6.2",
    "@types/node": "^22.7.4",
    "electron-builder": "^24.13.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "html-webpack-plugin": "^5.6.0"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@mui/material": "^6.1.1",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@fontsource/roboto": "^5.1.0",
    "@mui/icons-material": "^6.1.1"
  }
}
